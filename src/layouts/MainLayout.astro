---
import BaseHead from "@/components/BaseHead.astro";
import HeaderHome from "@/components/HeaderHome.astro";
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <BaseHead title={title} />
    <HeaderHome imagePath="/src/assets/logo.jpg" altText="logo Bakery" />
    <body class="bg-red-50 select-none m-4 full-page-figure">
        <slot />
        <footer class="flex items-center justify-center m-4 my-8 text-sm">
            <p>
                Desarrollado por <span class="font-script font-bold">Fabian Fonseca</span>, Inspirado en Dounot <a href="https://dounut-astro.vercel.app/" target="_blank" class="text-blue-400 hover:underline hover:text-blue-600"
                    >https://dounut-astro.vercel.app/</a>
            </p>
        </footer>
    </body>
</html>
